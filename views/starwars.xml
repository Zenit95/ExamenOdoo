<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="especie_form_view">
            <field name="name">especie.form</field>
            <field name="model">examen.especies</field>
            <field name="arch" type="xml">
                <form string="Especies Form">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="course_tree_view">
            <field name="name">especies.tree</field>
            <field name="model">examen.especies</field>
            <field name="arch" type="xml">
                <tree string="Especies Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="especies_list_action">
            <field name="name">Especies</field>
            <field name="res_model">examen.especies</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="main_starwars_menu" name="Star Wars"/>
        <menuitem id="starwars_menu" name="Star Wars" 
                parent="main_starwars_menu"/>
        <menuitem id="especies_menu" name="Especies" 
                parent="starwars_menu" action="especies_list_action"/>    
    
    </data>
</openerp>